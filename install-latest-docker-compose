#!/bin/bash

echo 'current Docker Compose version'
docker-compose -v

echo

echo 'downloading...'
sudo curl -s -L "https://github.com/docker/compose/releases/download/$(curl -Ls https://api.github.com/repos/docker/compose/releases/latest | grep tag_name | perl -wp -e 's!.+"(.+)",!$1!')/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose

echo

echo 'installed Docker Compose version'
docker-compose -v
